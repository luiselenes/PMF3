<header class="headerdispositivo"> 
</header>

<body>   
   <div class="containersearch">
     <%= form_tag(search_path,:method => "get") do %>
     <div class="input-group">
      <%= search_field_tag :search, params[:search], placeholder: "Buscar dispositivo", class: "form-control styletipo " %>
         <div class="intput-group-btn">
            <%= button_tag(type: 'submit', class: "btn-search styletipo", :name => nil) do %> Buscar  <i class="fas fa-search"></i>  
            <% end %>
         </div>
      </div>
     <% end %>
   </div>  
   <div class="catologcontainer ">
      <% @devices.each do |device| %>
      <div class="col-sm"> 
         <table >
            <tr> 
               <th id="letterth" >ID</th>
               <td><a href="/routes"><%= device.id%></a></td>
            </tr>
            <tr> 
               <th id="letterth" >Dispositivo</th>
               <td>
               <%= link_to device.name , @route %>
               </td>
            </tr>
            <tr>
               <th id="letterth">Compa&ntilde;ia</th>
               <td><%= device.agricultural_company_id%></td>
            </tr>
         </table>
      </div>
      <% end %>
   </div>