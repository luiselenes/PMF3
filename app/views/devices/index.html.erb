   <h1 class="headertitleGH">Bienvenido al sistema de monitoreo de fumigaci&oacute;n</h1>
   <%= image_tag 'paloverdelogo.png', class: 'iconpv' %> 
</header>  
<body>   
  <div class="containersearch">
   <%= form_tag(search_path,:method => "get") do %>
   <div class="input-group">
      <%= search_field_tag :search, params[:search], placeholder: "Buscar dispositivo", class: "form-control" %>
      <div class="intput-group-btn">
      <%= button_tag "Buscar", :class => 'btn-search', :name => nil %>
      </div>
   </div>
   <% end %>
  </div>  
  <div class="catologcontainer">
  <% @devices.each do |device| %>
    <div class="col-sm"> 
     <table>
         <tr> 
          <th><%= link_to "Dispositivo", :sort => "name"%> </th>
          <th><%= link_to "Capacidad", :sort => "capacity"%> </th>
          <th><%= link_to "Compania", :sort => "agricultural_company_id"%> </th>
         </tr>
        <table>
         <tr>
          <td><a href="/routes"><%= device.name%></a></td>
          <td><%= device.capacity%></td><td>
          <td><%= device.agricultural_company_id%></td>
         </tr>
        </table>
       </table>
    </div>
    <% end %>
    </div>
</body>
