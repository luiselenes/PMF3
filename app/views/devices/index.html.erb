      <%= form_tag(search_path,:method => "get") do %>
         <div class="input-group">
            <%= search_field_tag :search, params[:search], placeholder: "Buscar dispositivo", class: "form-control styletipo " %>
            <div class="intput-group-btn">
            <%= button_tag(type: 'submit', class: "btn-search styletipo", :name => nil) do %>
            Buscar  <i class="fas fa-search"></i>  
            <% end %>
            </div>
         </div>
         
      <% end %>
   </div>  
   <div class="catologcontainer ">
